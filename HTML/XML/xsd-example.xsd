<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <!-- definition of simple elements -->
    <xs:element name="name" type="xs:string" />

    <!-- definition of simple elements with restriction -->
    <xs:element name="price">
        <xs:simpleType>
            <xs:restriction base="xs:integer">
                <xs:minInclusive value="0" />
                <xs:maxInclusive value="2000" />
            </xs:restriction>
        </xs:simpleType>
    </xs:element>

    <!-- definition of attributes -->
    <xs:attribute name="exchange" type="xs:string" />

    <!-- definition of complex elements -->
    <xs:element name="ticker">
        <xs:complexType mixed="true">
            <xs:attribute ref="exchange" use="required" />
        </xs:complexType>
    </xs:element>

    <xs:element name="company">
        <xs:complexType>
            <xs:sequence>
                <xs:element ref="ticker" minOccurs="1" />
                <xs:element ref="name" />
                <xs:element ref="price" />
            </xs:sequence>
            <xs:attribute name="listed" type="xs:boolean" use="required" />
        </xs:complexType>
    </xs:element>

    <xs:element name="examples">
        <xs:complexType>
            <xs:sequence>
                <xs:element ref="company" />
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>